                                    Ninguna
                                    <% } %>

                                    <form action="/updateEquipo" method="post" id="formUpdate"
                                          onsubmit="return confirm('Seguro que desea cambiar la division del equipo <%= equipos[i].nombre %>?')">
                                        <select name="division" id="divisionSelect">
                                            <% for(var j = 0; j < divisiones.length; j++) { %>
                                            <option value="<%= divisiones[j]._id %>"
                                                    selected><%= divisiones[j].nombre %></option>
                                            <% } %>
                                        </select>
                                        <input type="hidden" class="form-control" name="equipoid"
                                               value="<%= equipos[i]._id %>">
                                        <input type="hidden" class="form-control" name="nombre"
                                               value="<%= equipos[i].nombre %>">
                                        <button type="submit">Cambiar</button>
                                    </form>
                                </div>
