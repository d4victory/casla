<!doctype html>
<html class="no-js" lang="" xmlns:background-color="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Torneo de Fútbol Para Socios del Club Atlético San Lorenzo de Almagro</title>
    <link rel="shortcut icon" href="favicon.ico">
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <link rel="stylesheet" href="vendor.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" type="text/css" href="css/layerslider.css">
    <script src="js/vendor/modernizr.js"></script>
</head>
<body>
<!--[if lt IE 10]>
<p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
<![endif]-->
<div class="wrapper">
    <!-- header -->
    <header class="header-main">
        <div class="header-lower clearfix">
            <%- include ../menu.ejs %>
        </div>
    </header>
    <!-- banner section -->
    <div class="innerbannerwrap">
        <div class="content"></div>
        <div class="innerbannergoleadores">
            <h2 class="bannerHeadline">Administración de Partidos<span></span></h2>
        </div>
    </div>
    <% if (resultado) { %>
    <% if (resultado == 200) { %>
    <div class="alert alert-success">La operacion fue realizada con exito</div>
    <% } else { %>
    <div class="alert alert-danger">La operacion fallo. Inténtelo nuevamente más tarde</div>
    <% } %>
    <% } %>
    <section class="innerpage_all_wrap bg-white">
        <div class="container">
            <div class="table-responsive" style="background-color: #262626">
                <div class="wrap_match-innerdetails">


                        <% if ((user.role == "ADMIN") || (user.role == "SUPER_ADMIN") || (user.role == "PLANILLERO")) { %>


                            <table style="background-color: #b81e20" class="table" style="text-align: center">
                                <tr>
                                    <td width="50%">
                                        <div class="headline02 largepoint1" style="color:midnightblue;text-align: right; background-color: #b81e20">Division:
                                            <select name="divisionSelect" id="divisionSelect">
                                                <option value="none"></option>
                                                <% for(var i=0; i < divisiones.length; i++) { %>
                                                <option value="<%= divisiones[i]._id %>"><%= divisiones[i].nombre %></option>
                                                <% } %>
                                            </select>
                                        </div>
                                    </td>
                                    <td width="50%">
                                        <div class="headline02 largepoint1" style="color:midnightblue; text-align: left; background-color: #b81e20">Fecha:
                                            <select name="fechaSelectName" id="fechaSelect">
                                            </select>
                                        </div>
                                    </td>
                                </tr>
                            </table>

                        <% } else { %>

                        <tr>
                            <div class="headline02 largepoint1" style="color:midnightblue; text-align: center; background-color: #b81e20">Ver partidos fecha:
                                <select name="fechaSelectName1" id="fechaSelect1">
                                    <option value="none"></option>
                                    <% for(var i=0; i < numeros_fechas.length; i++) { %>
                                    <option value="<%= numeros_fechas[i] %>"><%= numeros_fechas[i] %></option>
                                    <% } %>
                                </select>
                            </div>
                        </tr>

                        <% } %>

                    <table class="table table-striped " style="text-align: center ">

                        <thead>
                        <tr style="text-align: center">

                            <th scope="col" class="headline06" style="text-align: center">Estado</th>
                            <th scope="col" class="headline06" style="text-align: center">Equipo 1</th>
                            <th scope="col" class="headline06" style="text-align: center">Res 1</th>
                            <th scope="col" class="headline06" style="text-align: center">Res 2</th>
                            <th scope="col" class="headline06" style="text-align: center">Equipo 2</th>
                            <th scope="col" class="headline06" style="text-align: center">Dia</th>
                            <th scope="col" class="headline06" style="text-align: center">Hora</th>
                            <th scope="col" class="headline06" style="text-align: center">Division</th>
                            <th scope="col" class="headline06" style="text-align: center">Cancha</th>

                            <!--<th scope="col" class="headline06" style="text-align: center">Amonestados</th>
                            <th scope="col" class="headline06" style="text-align: center">Expulsados</th>
                            <th scope="col" class="headline06" style="text-align: center">Goles</th>-->

                            <th scope="col" class="headline06"></th>
                            <th scope="col" class="headline06"></th>

                        </tr>
                        </thead>

                        <tbody id="dataPartidosConFecha">




                        </tbody>



                    </table>
                </div>
            </div>


        </div>
    </section>
    <!-- footer -->
    <footer >
        <!--class="footer-type01"-->
        <%- include ../footer.ejs %>
    </footer>
</div>

<script src="js/vendor/vendor.js"></script>
<script src="js/main.js"></script>
<script src="js/admin.js"></script>
<script src="js/planillero.js"></script>
<script src="js/partidos.js"></script>


</body>
</html>